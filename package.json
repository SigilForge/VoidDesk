{
  "name": "voiddesk",
  "version": "0.4.0",
  "private": true,
  "description": "Ultra-minimal GPT desktop client with streaming + Plus/WebView mode.",
  "main": "main.js",
  "author": "SigilForge",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build": "electron-builder -mwl"
  },
  "build": {
    "appId": "com.sigilforge.voiddesk",
    "productName": "VoidDesk",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "styles.css",
      "package.json",
      "README.md",
      "assets/**"
    ],
    "asar": true,

    "win": {
      "icon": "assets/voiddesk.ico",
      "target": [
        { "target": "nsis", "arch": ["x64"] },
        { "target": "zip",  "arch": ["x64"] }
      ],
      "artifactName": "VoidDesk-${version}-${arch}.${ext}"
    },

    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "VoidDesk"
    },

    "linux": {
      "icon": "assets",
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },

  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "31.2.0",
    "electron-builder": "^24.13.3"
  }
}
